@require "../base/colors.styl";
@require "../base/fonts.styl";
@require "../base/units.styl";

.skills
    //display: block
    &__container
        background-color: $background_gray
        box-sizing: border-box
        display: inline-block
        padding: $double_padding $normal_padding
        width: 100%
        
    &__title
        text-align: center
        color: $circle_purple
        font-family: $text_font
    
    &__item
        display: flex
        justify-content: space-evenly
        width: 100%
        max-width: 30rem
        margin: 0 auto
        margin-top: $double_margin
        margin-bottom: $double_margin
        &__tech
            border-radius: 100%
            height: 4rem
            width: 4rem

            &:first-child
                background-image: url('./images/rx.png')

            &:nth-child(2)
                background-image: url('./images/js.png')

            &:last-child
                background-image: url('./images/rn.png')