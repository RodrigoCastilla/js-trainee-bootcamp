@require "../base/colors.styl";
@require "../base/fonts.styl";
@require "../base/units.styl";

.contact
    font-family: $title_font
    &__container
        background-color: $darkBlue_color
        //box-sizing: border-box
        //justify-content: space-evenly
        //display: block
        padding: $triple_padding
        //padding-bottom: $double_padding
        border-top: 0.375rem solid $green_color
        border-bottom: 0.375rem solid $green_color
        width: 100%
        text-align: center
    &__image
        width: 40%
        height: auto

    &__title
        color: $lightGray_color
        font-weight: medium
        font-size: 3rem
    &__subtitle
        color: $lightGray_color
        font-weight: normal
        margin: $double_margin auto
    &__email-input
        width: 100%
        //margin: $double_margin $normal_margin
        padding: $normal_padding
        border-radius: 0.5rem
        border: 0.1rem solid $lightGray_color
        background-color: $darkBlue_color
        margin-bottom: $normal_margin

        &::placeholder
            color: $lightGray_color

    &__message-input
        width: 100%
        //margin: $double_margin $normal_margin
        padding: $normal_padding
        border-radius: 0.5rem
        border: 0.1rem solid $lightGray_color
        background-color: $darkBlue_color
        min-height: 10rem

        &::placeholder
            color: $lightGray_color
    &__box
        box-sizing: border-box
        padding: $normal_padding

    &__button
        color: $lightGray_color
        background: $lightBlue_color
        border: 0
        border-radius: 0.5rem
        font-size: 1.2rem
        padding: $normal_padding $triple_padding
        //width: 100%
        font-weight: bold
        //max-width: 30rem
        

@media screen and (min-width: $tablet_width)
    .contact
        &__title
            text-align: center
            font-size: 3rem
        &__button
            border: none 
            padding: 0.75rem
            width: 100%
            max-width: 25rem